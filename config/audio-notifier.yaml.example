# Audio Notifier Configuration for Claude Code
# Location: ~/.claude/audio-notifier.yaml

# Sound settings
sound:
  enabled: true

  # Default sound (used if random is disabled and no project match)
  file: /System/Library/Sounds/Submarine.aiff

  # Random sound selection (picks different sound per project)
  random: true

  # Available sounds pool (for random selection)
  # You can use system sounds or custom audio files (.aiff, .wav, .mp3)
  available_sounds:
    - /System/Library/Sounds/Submarine.aiff
    - /System/Library/Sounds/Glass.aiff
    - /System/Library/Sounds/Ping.aiff
    - /System/Library/Sounds/Tink.aiff
    - /System/Library/Sounds/Purr.aiff
    - /System/Library/Sounds/Pop.aiff
    - /System/Library/Sounds/Funk.aiff
    - /System/Library/Sounds/Hero.aiff
    - /System/Library/Sounds/Blow.aiff
    - /System/Library/Sounds/Bottle.aiff
    - /System/Library/Sounds/Frog.aiff
    - /System/Library/Sounds/Basso.aiff
    # Custom sounds:
    # - ~/Downloads/custom-notification.mp3
    # - ~/Music/alert-sound.wav

  # Per-project sound mappings (project name â†’ sound file)
  # Project names are matched against working directory paths
  project_sounds:
    # Example: github-activity-summary-tool: /System/Library/Sounds/Hero.aiff
    # Example: my-portfolio: /System/Library/Sounds/Glass.aiff
    # Add your projects below:

  # Per-event sound mappings (override sounds for specific events)
  event_sounds:
    permission: /System/Library/Sounds/Ping.aiff      # When Claude needs permission
    question: /System/Library/Sounds/Ping.aiff        # When Claude asks a question
    inactivity: /System/Library/Sounds/Ping.aiff      # When Claude is idle 60s

  # Minimum seconds between notifications (anti-spam)
  min_interval: 2

# Notification types (multiple can be enabled)
notifications:
  # Local audio notification (macOS/Linux)
  audio:
    enabled: true

  # macOS visual notification (requires terminal-notifier)
  terminal_notifier:
    enabled: true
    title: "Claude Code"
    subtitle: "Question Detected"
    # Will show the actual question as the message

  # Custom notification messages per event type
  messages:
    permission: "Claude requires your permission"
    question: "Claude has a question"
    inactivity: "Claude requires your direction"

  # Remote notification via ntfy.sh (optional)
  ntfy:
    enabled: false
    topic: ""  # e.g., "my-claude-notifications"
    server: "https://ntfy.sh"
    priority: default  # min, low, default, high, max

# Inactivity detection (backstop timer)
# Sends notification if Claude has been idle for X seconds
inactivity:
  enabled: true
  # Time in seconds before considering Claude "waiting"
  timeout: 30
  # Message to show for inactivity notifications
  message: "Claude may be waiting for input"

# Logging
logging:
  # Save all detected questions to log file
  log_questions: true
  log_file: ~/.claude/questions-detected.log

  # Debug logging (verbose output)
  debug: true
  debug_file: ~/.claude/smart-notify-debug.log
